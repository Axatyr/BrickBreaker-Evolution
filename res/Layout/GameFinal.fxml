<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane fx:id="window" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.scene.ControllerGameFinal">
   <items>
      <BorderPane fx:id="panel" style="-fx-background-image: url(&quot;/Images/background/GameOverBackground.png&quot;); -fx-background-size: stretch;">
         <top>
            <HBox fx:id="titleContainer" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblTitle" text="YOU WON!" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="70.0" />
                     </font>
                     <padding>
                        <Insets top="50.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <VBox fx:id="buttonContainer" alignment="CENTER" prefHeight="270.0" prefWidth="471.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" />
                  <Label fx:id="lblHighscore" prefHeight="46.0" text="HIGHSCORE:" />
                  <Label fx:id="lblScore" text="YOUR SCORE: ">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="lblCredits" prefHeight="46.0" text="If you want to play a personalized level, just check our Creative Mode!">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin></Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnMenu" mnemonicParsing="false" prefHeight="90.0" prefWidth="557.0" styleClass="menuButton" text="Return to menu">
                           <HBox.margin>
                              <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnRanking" mnemonicParsing="false" prefHeight="90.0" prefWidth="557.0" styleClass="menuButton" text="Ranking">
                           <HBox.margin>
                              <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </items>
</SplitPane>
